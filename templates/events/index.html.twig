{% extends 'base.html.twig' %}

{% block title %}Hello EventsController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Events Index</h1>
        <div class="d-flex flex-wrap">
            {% for event in events %}
                <div class="card col-sm-5 m-sm-2" style="-webkit-box-shadow: -2px -2px 10px 0 grey;-moz-box-shadow: -2px -2px 10px 0 grey;box-shadow: -2px -2px 10px 0 grey;">
                    <div class="card-body">
                        <h5 class="card-title">{{ event.name }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Début le :{{ event.date|date("m/d/Y") }}</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Durée : {{ event.duration|date("h:i") }}</h6>
                        <p class="card-text">{{ event.description }}</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{ event.nppeoplemin }}</li>
                            <li class="list-group-item">{{ event.nppeoplemax }}</li>
                            <li class="list-group-item">{{ event.level }}</li>
                            <li class="list-group-item">{{ event.age }}</li>
                        </ul>
                    </div>
                </div>


            {% endfor %}
        </div>
    </div>
{% endblock %}
